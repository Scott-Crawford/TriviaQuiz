<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pitt.sfc17.androidtrivia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity
            android:name="edu.pitt.sfc17.androidtrivia.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.pitt.sfc17.androidtrivia.PlayActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="edu.pitt.sfc17.androidtrivia.AddWordActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="edu.pitt.sfc17.androidtrivia.ScoreHistoryActivity"
            android:configChanges="orientation|screenSize"/>
        <service
            android:name="edu.pitt.sfc17.androidtrivia.BackgroundMusicService"
            android:exported="false"
            android:enabled="true"/>
    </application>

</manifest>